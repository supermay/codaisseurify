<%= form_for [@artist,@artist.songs.new] do |f| %>
  <div class="form-group">

    <label>Name</label>
    <%= f.text_field :name, placeholder: "Song name", class: 'form-control' %>

    <label>Youtube Link</label>
    <%= f.text_field :youtube_link, placeholder: "Add a youtube link here", class: 'form-control' %>

    <label>Description</label>
    <%= f.text_field :description, placeholder: "Add some descriptions", class: 'form-control' %>

    <% if @song.errors.any? %>
      <% @song.errors.full_messages.each do |message| %>
        <span class="help-block"><%= message %></span>
      <% end %>
    <% end %>

  </div>
<% end %>
