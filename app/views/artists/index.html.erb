<div class="jumbotron text-center">
   <h1>Welcome to Rebelmusic!</h1>
   <p>Want to add another artist?
   <%= link_to "Click here", new_artist_path %>
   </p>
   <p>&copy;2017 &#10084; Jiamei</p>
</div>

<div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
       Order by
    <span class="caret text-center" ></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <li><%= link_to "Name A to Z", "?sort=a-z" %></li>
    <li><%= link_to "Name Z to A", "?sort=z-a" %></li>
    <li><%= link_to "Create Time", "?sort=time" %></li>
  </ul>
</div>


<div class="row">
  <% @artists.each do |artist|%>
    <div class="col-sm-6 text-center">
      <div class="form-group">
        <h3><b><%= link_to artist.name, artist_path(artist.id) %></b></h3>
      </div>
      <div class="form-group">
        <h5>Website: <%= link_to "#{artist.website}", artist.website %></h5>
      </div>
      <div class="form-group">
        <%= image_tag artist.image.thumbnail %>
      </div>
    </div>
  <%end%>
</div>
